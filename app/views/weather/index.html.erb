<nav class="navbar navbar-expand-lg bg-primary text-white">
  <div class="container">
    <span class="fs-4"><%= link_to "Its Weather Time!", "/", class: "nav-link active" %></span>
  </div>
</nav>

<div class="container mt-4">
  <div class="row">
    <div class="col-3 text-left">
      <%= form_with url: "/weather", method: :get do |f| %>
        <div class="card">
          <div class="card-header">
            Search your Location
          </div>

          <div class= "card-body">
            <div class="mb-3">
              <%= f.label :zipcode, {class: "form-label"} %>
              <%= f.text_field :zipcode, {class: "form-control", placeholder: "Example: 27703"} %>
            </div>

            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <% if @cached %>
        <div class="mt-1">
          *Weather pulled from cache
        </div>
      <% end %>
    </div>

    <% if @current_weather %>
      <div class="col-2 text-center">
        <div class="container">
          <div class="card">
            <div class="card-header">
              Weather at <%= @address.zipcode %>
            </div>
            <div class= "card-body">
              <div class="mb-1">
                <%= @current_weather.weather  %>
              </div>
              <div class="mb-2">
                <img src="https://openweathermap.org/img/wn/<%=@current_weather.weather_icon%>@2x.png">
              </div>
            </div>
          </div>
        </div>
      </div>


      <div class="col-7 text-center">
        <div class="container">
          <div class="row">
            <div class="col-4">
              <%= render partial: "card", locals: { 
                card_header: "Current Average Temp", 
                card_body: "#{@current_weather.current_temp}째F" 
                }
              %>
            </div>
            <div class="col-4">
              <%= render partial: "card", locals: { 
                card_header: "Current High Temp", 
                card_body: "#{@current_weather.high_temp}째F" 
                }
              %>
            </div>
            <div class="col-4">
              <%= render partial: "card", locals: { 
                card_header: "Current Low Temp", 
                card_body: "#{@current_weather.low_temp}째F" 
                }
              %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @weather_forecast %>
  <div class="container mt-4">
    <h1>Forecast</h1>
    <div class="row">
        <% @weather_forecast.each_with_index do |pattern, index| %>
          <div class="col-2 text-center mb-3">
            <div class="card">
              <div class="card-header">
                Weather in <%= (index + 1) * 3 %> hours
              </div>
              <div class= "card-body">
                <div class="mb-1">
                  <%= pattern.weather  %>
                </div>
                <div class="mb-2">
                  <img src="https://openweathermap.org/img/wn/<%=pattern.weather_icon%>@2x.png">
                </div>
                <div class="mb-1">
                  <%= pattern.current_temp %>째F
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
<% end %>